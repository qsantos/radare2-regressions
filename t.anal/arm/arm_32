. $(git rev-parse --show-toplevel)/tests.sh

ARCH=arm.gnu

NAME="ldr code analysis"
BROKEN=1
FILE=malloc://32
CMDS="
wx 20c09fe5
wx 0cc09ae7 @ 4
e asm.arch=${ARCH}
e asm.bits=32
# pd 2 - note different colors
pi 2
ao~type[2]
ao@4~type[2]
"
EXPECT='ldr ip, [pc, 32] ; 0x00000028
ldr ip, [sl, ip]
opcode: ldr ip, [pc, 32] ; 0x00000028
prefix: 0
bytes: 20c09fe5
ptr: 0x00000028
refptr: 4
size: 4
type: load
stack: null
cond: 6
family: unknown
opcode: ldr ip, [sl, ip]
prefix: 0
bytes: 0cc09ae7
ptr: 0x00000000
refptr: 4
size: 4
type: load
stack: null
cond: 6
family: unknown
'
run_test

NAME="endian"
BROKEN=
FILE=malloc://32
CMDS="
e asm.arch=${ARCH}
e asm.bits=32
wx e59a9ae7
e cfg.bigendian=false
pi 1@0
e cfg.bigendian=true
pi 1@0
"
EXPECT='ldr r9, [sl, r5, ror 21]
ldr r9, [sl, 2791]
'
run_test
