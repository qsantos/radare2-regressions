#!/bin/bash

. $(git rev-parse --show-toplevel)/tests.sh

PLUGIN="arm"

NAME="$PLUGIN: ldr code analysis"
BROKEN=
FILE=malloc://32
CMDS='
wx 20c09fe5
wx 0cc09ae7 @ 4
e asm.arch='$PLUGIN'
e asm.bits=32
# pd 2 - note different colors
pi 2
ao~type[2]
ao@4~type[2]
'
EXPECT='ldr ip, [pc, 0x20]
ldr ip, [sl, ip]
opcode: ldr ip, [pc, 0x20]
prefix: 0
bytes: 20c09fe5
ptr: 0x00000028
refptr: 4
size: 4
type: load
esil: 8,pc,+,32,+,[4],ip,=
stack: null
cond: 0
family: unknown
opcode: ldr ip, [sl, ip]
prefix: 0
bytes: 0cc09ae7
refptr: 4
size: 4
type: load
esil: sl,0,+,[4],ip,=
stack: null
cond: 0
family: unknown
'
run_test

NAME="$PLUGIN: endian"
BROKEN=
FILE=malloc://32
CMDS='
e asm.arch='$PLUGIN'
e asm.bits=32
wx e59a9ae7
e cfg.bigendian=false
pi 1@0
e cfg.bigendian=true
pi 1@0
'
EXPECT='ldr sb, [sl, r5, ror 21]
ldr sb, [sl, 0xae7]
'
run_test
