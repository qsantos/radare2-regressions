#!/bin/sh
. $(git rev-parse --show-toplevel)/tests.sh

NAME='no flags'
CMDS='f
'
EXPECT=''
run_test

NAME='Set/get'
CMDS='
f cat
f rimmer 12
f lister 32@666
f kryten 32 666
f+skutter 1 @ 12
f
'
EXPECT='0x00000000 1 cat
0x00000000 12 rimmer
0x0000029a 32 lister
0x0000029a 32 kryten
0x0000000c 1 skutter
'
run_test

NAME='flags (JSON)'
CMDS='
# Add flags.
f cat
f rimmer 12
f lister 32@666
f kryten 32 666
f+skutter 1 @ 12
fj
'
EXPECT='[{"name":"cat","size":"1","offset":0},{"name":"rimmer","size":"12","offset":0},{"name":"lister","size":"32","offset":666},{"name":"kryten","size":"32","offset":666},{"name":"skutter","size":"1","offset":12}]
'
run_test

NAME='flag alias'
CMDS='
fa foo=bar+3
f bar=3
?v foo
'
EXPECT='0x6
'
run_test

NAME='flag alias 2'
CMDS='
fa foo bar+3
f bar=3
?v foo
'
EXPECT='0x6
'
run_test

NAME='flag alias infinite check'
CMDS='
fa foo=foo+3
?v foo
'
EXPECT='0x3
'
run_test

NAME='flag prefix dump'
CMDS='
f jiji=1
f jojo=2
f base=100
.f*base
?vi jiji
?vi jojo
'
EXPECT='101
102
'
run_test
